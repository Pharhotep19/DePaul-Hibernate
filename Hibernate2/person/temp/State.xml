<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="dm.domain">
  <class name="State" table="DM_STATE">
    <id name="id" type="long" column="id">
      <generator class="native"/>
    </id>
    <property name="name" column="name" type="string"/>
    <property name="population" column="population" type="long"/>
    
	<!-- bi-directional
		inverse=true tells hibernate that this isn't a separate association
	<set name="cities" inverse="true" cascade="save-update,delete">
      <key column="STATE_ID"/>
      <one-to-many class="City"/>
    </set> -->
  </class>
</hibernate-mapping>